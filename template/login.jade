        div#login
            div#login-box
                div.input-group
                    input(type="text" class="login-user" name="id" placeholder="用户名")
                    input(type="password" class="login-pwd" name="password" placeholder="密码")
                    div.adminico
                    div.pwdico
                div.login-btn
                    div(class="errors invisible pull-left")
                    div(class="checkbox pull-right")
                        span.login-remember
                        input#login-remember-checked.hide(type="checkbox" name="rememberMe")
                        |三十天内免登录
                    div.clearfix
                    button(class="btn btn-default btn-success btn-block login-submit")登录
        script(src="scripts/app.js")